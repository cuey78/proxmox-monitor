<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.proxmox-monitor" path="/org/gnome/shell/extensions/proxmox-monitor/">

    <key name="placement" type="s">
      <default>'right'</default>
      <summary>Panel placement</summary>
      <description>Where to show the indicator in the panel</description>
    </key>

    <key name="refresh-interval" type="i">
      <default>300</default>
      <summary>Refresh interval</summary>
      <description>Seconds between server status checks</description>
    </key>

    <key name="server-host" type="s">
      <default>''</default>
      <summary>Server host</summary>
      <description>IP or hostname of Proxmox server</description>
    </key>

    <key name="server-port" type="i">
      <default>22</default>
      <summary>SSH port</summary>
      <description>SSH port for Proxmox server</description>
    </key>

    <key name="server-username" type="s">
      <default>''</default>
      <summary>SSH username</summary>
      <description>Username for SSH connection</description>
    </key>

    <key name="server-identity-file" type="s">
      <default>''</default>
      <summary>SSH identity file</summary>
      <description>Path to SSH private key file</description>
    </key>

    <key name="last-upload-success" type="b">
      <default>false</default>
      <summary>Last upload success</summary>
      <description>Tracks if the last script upload succeeded</description>
    </key>

  </schema>
</schemalist>

